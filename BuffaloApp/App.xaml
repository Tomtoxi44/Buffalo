<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:BuffaloApp.Converters"
             x:Class="BuffaloApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <converters:BoolToHandEmojiConverter x:Key="BoolToHandEmojiConverter"/>
            <converters:BoolToSearchTextConverter x:Key="BoolToSearchTextConverter"/>
            <converters:LeaderboardBackgroundConverter x:Key="LeaderboardBackgroundConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
